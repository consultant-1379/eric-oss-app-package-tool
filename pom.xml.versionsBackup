                                <argument>pyyaml==5.4.1</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>setuptools install</id>
                        <phase>pre-clean</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${scripting.python.scripts.path}pip</executable>
                            <arguments>
                                <argument>install</argument>
                                <argument>--user</argument>
                                <argument>setuptools</argument>
                                <argument>virtualenv</argument>
                                <argument>wheel</argument>
                                <argument>pytest</argument>
                                <argument>robotframework==3.1.0</argument>
                                <argument>robotframework-archivelibrary</argument>
                                <argument>allure-robotframework</argument>
                                <argument>pyyaml==5.4.1</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>setuptools clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${scripting.python.path}</executable>
                            <arguments>
                                <argument>setup.py</argument>
