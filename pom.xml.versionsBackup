                        <V_ENV>${virtual.env.name}</V_ENV>
                        <MODULE_NAME>${py.module.name}</MODULE_NAME>
                        <PYTHONPATH>${HOME}</PYTHONPATH>
                    </environmentVariables>
                </configuration>
                <executions>
                    <execution>
                        <id>virtualenv setuptools install</id>
                        <phase>initialize</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${scripting.python.scripts.path}pip</executable>
                            <arguments>
                                <argument>install</argument>
                                <argument>--user</argument>
                                <argument>virtualenv</argument>
                                <argument>setuptools</argument>
